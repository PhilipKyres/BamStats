<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bamarama Statistics</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Bamarama Statistics", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					@if (User.Identity.IsAuthenticated)
					{
						//logged in
						@Html.ActionLink("Fight History", "Index", "BamFights", new { }, new { @class = "navbar-brand" })
					}
				</ul>
                <ul class="nav navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        //logged in
                        @Html.ActionLink("New Fight", "GetInfo", "BamFights", new {  }, new { @class = "navbar-brand" })
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        //logged in
                        @Html.ActionLink("Logout", "Logout", "Home", new { returnUrl = Request.Url.LocalPath }, new { @class = "navbar-brand" })
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <img src="~/images/alpha.png" style="width:100px;float:right" />
            <p>&copy; @DateTime.Now.Year - Bamarama Statistics</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>